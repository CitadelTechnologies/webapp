{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <nav>
        <h1>
            <img src="{{ asset('images/banner.svg') }}" alt="La Citadelle"/>
        </h1>
    </nav>

    <div id="projects">
        <header>
            <h3>Nos projets</h3>
        </header>
        <section>
            {% for project in projects %}
                <div>
                    <header>
                        <h4>{{ project.name }}</h4>
                    </header>
                    <section>
                        {{ project.description }}
                    </section>
                </div>
            {% endfor %}
        </section>
        <footer>

        </footer>
    </div>
{% endblock %}